@model rtc.Data.Models.{{ model }}

@{
    ViewData["Title"] = @rtc.Web.Common.Resources.Language.Add{{ model }};
}

<div class="page-wrapper">
    <div class="container-fluid">

          <!-- Title -->
        <div class="row heading-bg">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h5 class="txt-dark">@rtc.Web.Common.Resources.Language.Add{{ model }}</h5>
            </div>
            <!-- Breadcrumb -->
            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                <ol class="breadcrumb">
                    <li>
                        @Html.ActionLink(@rtc.Web.Common.Resources.Language.{{ model }}List, "Index")
                    </li>
                </ol>
            </div>
            <!-- /Breadcrumb -->
        </div>
        <!-- /Title -->

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-default card-view">
                    <div class="panel-wrapper collapse in">
                        <div class="panel-body">
                            <div class="form-wrap">
                                <div class="row">
                                {% for attr in attrs %}
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.{{ attr }}, htmlAttributes: new { @class = "control-label mb-10" })
                                            @Html.EditorFor(model => model.{{ attr }}, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.{{ attr }}, "", new { @class = "text-danger" })                                       
                                        </div>
                                    </div>
                                {% endfor %}
                                </div>                     
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success btn-icon left-icon mr-10 pull-left"> <i class="fa fa-check"></i> <span>@rtc.Web.Common.Resources.Language.Add</span></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>
</div>

<div>
    <a asp-action="Index">@rtc.Web.Common.Resources.Language.{{ model }}List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
